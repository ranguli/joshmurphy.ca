---
import "../styles/global.css";

const { title } = Astro.props;
const url = new URL(Astro.request.url);
---

<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="posts on joshmurphy.ca"
      href="/rss.xml"
    />
    <title>{title} - joshmurphy.ca</title>

    <style>
      /* Checkbox Hack */
      input[type=checkbox]:checked ~ .menu {
        display: block;
      }
    </style>
  </head>

  <body class="flex flex-col">
    <nav class="bg-white shadow-lg">
      <div class="max-w-6xl mx-auto px-4">
        <div class="flex justify-between">
          <div class="flex space-x-4">
            <!-- Logo -->
            <div>
              <a href="/" class="flex items-center py-5 px-2 text-gray-700 hover:text-gray-900">
                <span class="font-bold">joshmurphy.ca</span>
              </a>
            </div>
            <!-- Primary Navbar items -->
            <div class="hidden md:flex items-center space-x-1">
              <a href="/posts/" class="py-5 px-3 text-gray-700 hover:text-gray-900">posts</a>
              
              <!--<a href="/things/" class="py-5 px-3 text-gray-700 hover:text-gray-900">projects</a>-->
                  
            
              <a href="/tags/" class="py-5 px-3 text-gray-700 hover:text-gray-900">tags</a>
            </div>
          </div>
          <!-- Secondary Navbar items -->
          <div class="hidden md:flex items-center space-x-1">
            <a href="mailto:hello@joshmurphy.ca">
              <i class="px-5 fas fa-at h-full text-xl w-3.5"></i>
            </a>
            <a href="https://github.com/ranguli/">
              <i class="px-5 fab fa-github text-xl w-3.5"></i>
            </a>
          </div>
        </div>
      </div>
      <!-- Mobile Menu -->
      <div class="menu md:hidden">
        <a href="/posts/" class="block py-2 px-4 hover:bg-gray-200">posts</a>
        
        <!--<a href="/things/" class="block py-2 px-4 hover:bg-gray-200">projects</a>-->
        <a href="/tags/" class="block py-2 px-4 hover:bg-gray-200">tags</a>
      </div>
    </nav>
    <main>
      <div class="container mx-auto p-4 md:max-w-2xl lg:max-w-3xl xl:max-w-4xl">
        <slot />
      </div>
    </main>
  </body>
</html>
