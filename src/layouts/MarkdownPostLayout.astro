---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title}>

      {frontmatter.coverImage && <img src={frontmatter.coverImage} alt={frontmatter.title} class="cover-image"/>}
      <h1 class="title">{frontmatter.title}</h1>
      <h2 class="description">{frontmatter.description}</h2>
      <h3 class="published">Published on {frontmatter.pubDate.toString().slice(4, 15)}</h3>
      <h3 class="author">{frontmatter.author}</h3>
    <div class="prose m-2 font-serif">
      <slot />
  </div>
</BaseLayout>