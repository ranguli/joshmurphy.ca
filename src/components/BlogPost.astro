---
const { url, title, author, description, date, coverImage } = Astro.props;
---

<li class="mb-4">
  
  <a href={url} class="block">
    {coverImage && (
      <img class="w-full h-64 object-cover mb-2 rounded" src={coverImage} alt={title}/>
    )}
    <h2 class="title">{title}</h2>
  </a>

  <p class="description">{description}</p>
  <p class="author">Published on {date}</p>
  <p class="author">by {author}</p>
</li>
